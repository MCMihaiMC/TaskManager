@using TaskManager.Business.BusinessEntities
@model IEnumerable<Step> 

    <div>
    @{
        foreach (var d in Model)
        {
                <div>
                    <div><input type="button" 
                                value="@d.Label" 
                                id="step_@d.Id" 
                                onclick="loadStepChildren('@d.Id');" />
                                </div>
                    <div id="childstep_@d.Id" class="step"></div>
                </div>
        }
    }
    </div>

<script type="text/javascript">

</script>

<style>

    .step {
        left: 200px;
        position: relative;
    }
</style>